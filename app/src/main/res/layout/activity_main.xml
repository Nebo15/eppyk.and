<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sky_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/StarsGifView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:src="@drawable/star_begin" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/StarsGifViewBuffer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"/>


    <Button
        android:id="@+id/animTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="testAnimation"
        android:text="Animation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animTestButton"
        android:layout_centerHorizontal="true"
        android:onClick="gifTest"
        android:text="Gif test" />


    <!-- LOGO -->
    <ImageView
        android:id="@+id/LogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-12dip"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="120dip"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo" />

    <!-- PLANET -->
    <ImageView
        android:id="@+id/PlanetImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitStart"
        android:src="@mipmap/planet" />


    <!-- MAN -->
    <nebo15.eppyk.GIFView
        android:id="@+id/ManImageView"
        android:layout_width="180dip"
        android:layout_height="180dip"
        android:layout_above="@+id/PlanetImageView"
        android:layout_marginBottom="-16dip"
        android:layout_marginLeft="-10dip"
        android:src="@drawable/test_man"/>


    <!-- DOG -->
    <nebo15.eppyk.GIFView
        android:id="@+id/DogImageView"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/PlanetImageView"
        android:layout_marginBottom="-12dip"
        android:layout_marginLeft="30dip"
        android:src="@mipmap/dog"/>



</RelativeLayout>
